public class Person
{
  private String firstName = "";
  private String lastName = ""; 
  
  public Person()
  {
    firstName = "Alex";
    lastName = "Elese";
  }
  
  public String getName()
  {
    return firstName + " " + lastName;
  }
} 
public void setName(String name)
{
  firstName = name;
}

 
public void setName(String name, String last, String pwd)
{
  firstName = name;
  lastName = last;
