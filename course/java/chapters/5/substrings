public class Main {
    public static void main(String[] args) {
        String str = "Hello, world!";
        // Extracting the substring from index 7 to the end of the string
        String substr1 = str.substring(7);
        // Extracting the substring from index 0 to 5 (not including 5)
        String substr2 = str.substring(0, str.length);

        System.out.println("Original string: " + str);
        System.out.println("Substring from index 7: " + substr1);  // "world!"
        System.out.println("Substring from index 0 to 5: " + substr2);  // "Hello"
    }
}



/*
 * Activity 3.6.3
 */
public class EnhancedFor
{
  public static void main(String[] args) 
  {
     int[] goals = {1, 2, 0, 3, 2, 4, 2, 1, 0, 2, 0, 1, 3, 2};
    
     for (int g : goals)
     {
       System.out.println("goals:" + g);
     }
  }
}


/*
 * Activity 3.6.3
 */
public class EnhancedForStates
{
  public static void main(String[] args)
  {
    String[] newEngland = {"Maine", "New Hampshire",
                           "Vermont", "Massachusetts",
                          "Connecticut", "Rhode Island"};

    System.out.println("The New England States:");
    for(String state : newEngland)
    {
      System.out.println(state);
    } 
  }
}


